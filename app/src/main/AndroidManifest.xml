<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pakstudy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PakStudy.coldStartAnimation">
        <activity android:name=".PreparationActivity"></activity>
        <activity
            android:name=".QuizActivity"
            android:label="Question"
            android:parentActivityName=".QuestionsActivity"
            android:theme="@style/Theme.PakStudy.myTheme" />
        <activity
            android:name=".QuestionsActivity"
            android:label="Questions"
            android:parentActivityName=".SubjectActivity"
            android:theme="@style/Theme.PakStudy.myTheme" />
        <activity
            android:name=".SubjectActivity"
            android:label="Subjects"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/Theme.PakStudy.myTheme" />
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>