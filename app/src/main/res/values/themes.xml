<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PakStudy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PakStudy.coldStartAnimation">
        <item name="android:windowBackground">@drawable/cold_start_image</item>
        <item name="colorPrimaryVariant">@color/white</item>
    </style>

    <style name="Theme.PakStudy.myTheme">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>


    </style>

    <style name="Theme.PakStudy.coldStartAnimation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PakStudy.coldStartAnimation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PakStudy.coldStartAnimation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>